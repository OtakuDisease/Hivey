<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Hivey" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/Hivey</item>
        <item name="colorPrimaryVariant">@color/Hivey_light</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/baby_blue</item>
        <item name="colorSecondaryVariant">@color/dark_baby_blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Hivey.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Hivey.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Hivey.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <color name="Hivey_light">#FFFF33</color>
    <color name="baby_blue">#89CFF0</color>
    <color name="dark_baby_blue">#ADD8E6</color>
</resources>